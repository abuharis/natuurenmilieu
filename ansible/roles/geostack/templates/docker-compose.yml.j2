version: "3.9"

networks:
  geonet:
    driver: bridge

services:
  dataviewer:
    image: dataviewer:latest
    container_name: dataviewer
    restart: unless-stopped
    ports:
      - "8090:8090"
    networks:
      - geonet

  geoserver:
    image: osgeo/geoserver:2.24.2
    container_name: geoserver
    restart: unless-stopped
    ports:
      - "8080:8080"
    networks:
      - geonet

  postgis:
    image: postgis/postgis:15-3.3
    container_name: postgis
    restart: unless-stopped
    environment:
      POSTGRES_USER: geoserver
      POSTGRES_PASSWORD: secret
      POSTGRES_DB: geodb
    ports:
      - "5432:5432"
    networks:
      - geonet

  nginx:
    image: nginx:alpine
    container_name: nginx
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
    depends_on:
      - dataviewer
      - geoserver
    networks:
      - geonet
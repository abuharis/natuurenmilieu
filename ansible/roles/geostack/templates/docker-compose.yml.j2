version: "3.9"

networks:
  geonet:
    driver: bridge

volumes:
  certbot-www:

services:
  dataviewer:
    image: dataviewer:latest
    container_name: dataviewer
    restart: unless-stopped
    ports:
      - "8090:8090"
    networks:
      - geonet

  geoserver:
    image: {{ geoserver_image }}
    container_name: geoserver
    restart: unless-stopped
    depends_on:
      postgis:
        condition: service_healthy
    environment:
      GEOSERVER_ADMIN_USER: {{ geoserver_admin_user }}
      GEOSERVER_ADMIN_PASSWORD: {{ geoserver_admin_password }}
    ports:
      - "8080:8080"
    volumes:
      - ./geoserver_data:/var/lib/geoserver
    networks: [{{ geonet }}]

  postgis:
    image: {{ postgis_image }}
    container_name: postgis
    restart: unless-stopped
    environment:
      POSTGRES_DB: {{ postgres_db }}
      POSTGRES_USER: {{ postgres_user }}
      POSTGRES_PASSWORD: {{ postgres_password }}
    volumes:
      - ./postgis_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{ postgres_user }} -d {{ postgres_db }}"]
      interval: 10s
      timeout: 5s
      retries: 10
    networks: [{{ geonet }}]

  certbot:
    image: certbot/certbot:latest
    container_name: certbot
    restart: unless-stopped
    depends_on:
      - nginx
    networks:
      - geonet
    volumes:
      - /opt/ssl/letsencrypt:/etc/letsencrypt
      - /opt/ssl/lib:/var/lib/letsencrypt
      - /opt/ssl/www:/var/www/certbot
    entrypoint: >
      sh -c "trap exit TERM;
             while :; do
               # Try to issue the cert if it doesn't exist yet
               certbot certonly --webroot -w /var/www/certbot \
                 -d wok.water-op-de-kaa.src.surf-hosted.nl -d www.wok.water-op-de-kaa.src.surf-hosted.nl \
                 --agree-tos --no-eff-email || true;
               
               # Renew any existing certificates
               certbot renew --webroot -w /var/www/certbot --quiet --deploy-hook 'nginx -s reload';
               
               # Sleep 12 hours before next renewal check
               sleep 12h;
             done"

  nginx:
    image: {{ nginx_image }}
    container_name: nginx
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/default.conf:/etc/nginx/conf.d/nginx.conf:ro
      - /opt/ssl/letsencrypt:/etc/letsencrypt:ro  # certs (read-only for nginx)
      - /opt/ssl/www:/var/www/certbot   # challenge dir
    depends_on:
      - dataviewer
      - geoserver
    networks:
      - geonet